{
    "name": "dbp/relay-blob-bundle",
    "description": "A bundle for file-serving, persisting and managing",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "api-platform/core": "^2.7.11",
        "dbp/relay-blob-library": "^0.2.0",
        "dbp/relay-core-bundle": "^0.1.118",
        "doctrine/dbal": "^3.3",
        "justinrainbow/json-schema": "^5.2",
        "symfony/event-dispatcher": "^5.4",
        "symfony/mailer": "^5.4",
        "symfony/mime": "^5.4",
        "symfony/uid": "^5.4",
        "symfony/framework-bundle": "^5.4",
        "symfony/config": "^5.4",
        "symfony/http-kernel": "^5.4",
        "symfony/http-foundation": "^5.4",
        "symfony/dependency-injection": "^5.4",
        "symfony/orm-pack": "^2.2",
        "doctrine/migrations": "^3.5",
        "doctrine/orm": "^2.18",
        "twig/twig":"^3.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpstan/phpstan": "^1.9.11",
        "phpstan/phpstan-phpunit": "^1.3.3",
        "phpstan/phpstan-symfony": "^1.2.20",
        "phpunit/phpunit": "^9.5.28",
        "symfony/browser-kit": "^5.4.11",
        "symfony/http-client": "^5.4.17",
        "symfony/monolog-bundle": "^3.8",
        "symfony/phpunit-bridge": "^5.4.17",
        "vimeo/psalm": "^4.30.0",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\BlobBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\BlobBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
